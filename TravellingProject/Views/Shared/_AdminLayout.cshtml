
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="~/Content/Site.css" rel="stylesheet" />


<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <h3 class="w3-bar-item" style="margin-top:12px">Genel Ayarlar</h3>
        <br />
        <a href="/Admin/Index/" class="w3-bar-item w3-button"><i class="fa-solid fa-newspaper"></i> Yazılar</a>
        <a href="/Admin/YorumListesi/" class="w3-bar-item w3-button"><i class="fa-solid fa-comment"></i> Gelen Yorumlar</a>
        <a href="/Admin/iletisim/" class="w3-bar-item w3-button"><i class="fa-solid fa-envelope"></i> İletişim Bilgileri</a>
        <a href="/Admin/Hakkimizda/" class="w3-bar-item w3-button"><i class="fa-solid fa-circle-info"></i> Hakkımızda</a>
        <a href="/Default/Index/" class="w3-bar-item w3-button"><i class="fa-solid fa-globe"></i> Siteye Git</a>
        <a href="/GirisYap/Logout/" class="w3-bar-item w3-button"><i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:15%;">

        <div class="w3-container w3-teal">
            <br />
            <h4>Admin Yönetim Paneli</h4>
        </div>

        @*<img src="img_car.jpg" alt="Car" style="width:100%">*@

        <div class="w3-container">
            <br />
            @RenderBody()
        </div>

    </div>

</body>
</html>

